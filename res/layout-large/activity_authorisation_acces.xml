<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".GererAuthorisationAcces" xmlns:app="http://schemas.android.com/apk/res/com.example.test">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" 
        
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AuthorisationAccesTextViewUtilisateur"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/utilisateur" />

            <Button
                android:id="@+id/AuthorisationAccesButtonUtilisateur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AuthorisationAccesTextViewSecteur"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/secteur" />

            <Button
                android:id="@+id/AuthorisationAccesButtonSecteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AuthorisationAccesTextViewHeureDebut"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/heuredebut" />

            <EditText
                android:id="@+id/AuthorisationAccesEditTextHeureDebut"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
            <TextView
                android:id="@+id/AuthorisationAccesTextViewHeureFin"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":" />
            <EditText
                android:id="@+id/AuthorisationAccesEditTextMinuteDebut"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AuthorisationAccesTextViewHeureFin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/heurefin" />

            <EditText
                android:id="@+id/AuthorisationAccesEditTextHeureFin"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />
            <TextView
                android:id="@+id/AuthorisationAccesTextViewHeureFin"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":" />
            <EditText
                android:id="@+id/AuthorisationAccesEditTextMinuteFin"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp" >

            <Button
                android:id="@+id/AuthorisationAccesButtonCree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cree" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>